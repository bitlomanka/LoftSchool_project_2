aside.sidebar
    ul.sidebar-list.product-line
        - var nav = ['Флагманы', 'Бюджетная линейка']
            each item, i in nav
                li.product-line__item
                    a.product-line__link(href="#" class="#{i == nav.length - 1 ? 'product-line__link_active' : ''}")= item
    form.form-sidebar
        .title-filter
            | Наличие в магазинах
            .turn
        .accordion
            ul.sidebar-list.shop-list
                - var items = ['В ближайшем ко мне магазине', 'Во всех магазинах']
                    each item, i in items
                        li.sidebar-list__item.shop-filter__item
                            label
                                - if (i == 0)
                                    input(type="radio" checked name="shop").shop-filter__check
                                - else
                                    input(type="radio" name="shop").shop-filter__check
                                span.radio
                                = item
        .title-filter
            | Бренды
            .turn
        .accordion
            ul.sidebar-list.shop-list.filter__item_brand-name
                - var items = ['Lenovo','Apple', 'Samsung', 'Asus', 'Motorola']
                    each item, i in items
                        li.sidebar-list__item.shop-filter__item
                            label
                                - if (i == 0)
                                    input(type="checkbox" checked name="shop-check").shop-filter__check
                                - else
                                    input(type="checkbox" name="shop-check").shop-filter__check
                                span.check
                                = item
                    li.sidebar-list__item.shop-filter__item
                        a(href="#").shop-filter__reset
                            |Сбросить фильтр
        .title-filter
            | Цена
            .turn
        .accordion
            ul.sidebar-list.price-list
                - var items = ['от', 'до']
                - var p = ['price-min', 'price-max']
                    each item, i in items
                        li.sidebar-list__item.price_item
                            label.price-lab(for="#{p[i]}")= item
                            - if (i == 0)
                                input(type="text" checked name="price-min" data-min="50" value="100" id="price-min").price__field
                            - else
                                input(type="text" name="price-min" data-max="30000" value="13000" id="price-max").price__field
                    li.sidebar-list__item.widget
                        #price-range

        .title-filter
            | Цвет
            .turn
        .accordion
            ul.sidebar-list.color-list
                -for(var i = 1; i <= 12; i++)
                        li.sidebar-list__item(class="color__item color__item_#{i}")
        .title-filter
            | Операционные системы
            .turn
        .accordion
            ul.sidebar-list.shop-list.shop-list_os
                - var items = ['Android','iOS', 'Windows Mobile', 'Symbian', 'Custom']
                    each item, i in items
                        li.sidebar-list__item.shop-filter__item
                            label
                                - if (i == 0)
                                    input(type="checkbox" checked name="shop-check").shop-filter__check
                                - else
                                    input(type="checkbox" name="shop-check").shop-filter__check
                                span.check
                            = item
                    li.sidebar-list__item.shop-filter__item
                        a(href="#").shop-filter__reset
                            |Сбросить фильтр



