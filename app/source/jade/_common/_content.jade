        ul.product-list
            each item in product_list
                li.product__item
                    .slide-show
                        .slideshow__display
                            img(src="#{item.pictures[0]}" alt="").slideshow__display__img
                        ul.slide-show__list
                            each picture in item.pictures
                                li.slide-show__item
                                    a(href="#").slide-show__pic
                                       img(src="#{picture}" alt="").slide-show__img
                        .vendor__code
                            | Артикул
                            span.vendor__code__number
                                =item.art
                    .product-info-list
                        h3.tile__name-product
                            =item.name
                        .description__product
                            =item.descr
                        ul.feature-list
                            each feature, feature_key in item.features
                                li.feature__item
                                    span.feature__key= feature_key
                                    span.feature__val= feature
                        div(class="rating__block")
                            ul.stars__list
                                - for (var i = 0; i < 5; i++)
                                    li.stars__item
                            .evaluation= item.rating
                    .cost-of
                        .cost-of__price
                            =item.price
                            | &#8381;
                        input(type="button", name="add-to-cart" value="В корзину").cost-of__add-to-cart
                        .cost-of__product-availability
                                =item.avail
