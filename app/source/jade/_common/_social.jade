mixin social(class_suffix)
    ul(class="social" + (class_suffix ? ' social_#{class_suffix}' : ''))
        - var social = ['fb', 'vk', 'tw']
            each item in social
                li(class="social__item" + (class_suffix ? ' social__item_#{class_suffix}' : ''))
                    a(href="#" class="socials__link social__link_#{item}" + (class_suffix ? ' social__link_#{class_suffix}' : ''))= item